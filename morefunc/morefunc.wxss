/* moreFunc/morefunc.wxss */
@keyframes moreRevolve{
  to{
    transform: scale(1,1.5) rotate(-60deg);
  }
}

.more{
  width: 80rpx;
  height: 80rpx;
  text-align: center;
  position: fixed;
  color:rgb(75, 73, 73);
  z-index:999;
  right:60rpx;
  bottom:110rpx;
  line-height:100rpx;
  transform: rotate(-60deg);
}

.more .iconfont{
  font-size: 40px;
}

.moreStyle{
  color:rgb(90, 190, 90);
  animation:moreRevolve .8s;
  animation-fill-mode: forwards;
}

@keyframes feedBack{
  to{
    opacity: 1;
    transform: translate(-65rpx,-65rpx);
  }
}

.feed_animation{
  animation:feedBack .5s;
  animation-fill-mode: forwards;
}

.feed_back{
  opacity: 0;
  position: fixed;
  z-index: 9999;
  right:80rpx;
  bottom:110rpx;
  border-radius: 50%;
  border:2rpx solid rgba(0,0,0,.3);
}

@keyframes historyMove{
  to{
    opacity: 1;
    transform: translate(-65rpx,65rpx);
  }
}

.history_animation{
  animation:historyMove .5s;
  animation-fill-mode: forwards;
}

.history_container{
  opacity:0;
  position: fixed;
  z-index: 9999;
  right:80rpx;
  bottom:110rpx;
  line-height: 60rpx;
}

.search_sum{
  border-radius: 50%;
  border:2rpx solid rgba(0,0,0,.3);
}

.search_num{
  width: 30rpx;
  height: 30rpx;
  border-radius:50%;
  background-color:rgb(209, 27, 27);
  position: relative;
  text-align: center;
  line-height: 30rpx;
  top:-60rpx;
  right:20rpx;
  font-size:25rpx;
  color:white;
}


.dialog_container{
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  overflow: auto;
  margin: 0;
  background: rgba(10, 10, 10, 0.7);
  z-index:999;
}

.dialog_title{
  padding:10rpx;
  display: flex;
  justify-content: left;
}

.feedBack_dialog{
  position: relative;
  margin: 100rpx auto;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 6rpx rgb(0 0 0 / 30%);
  box-sizing: border-box;
  width: 95%;
  height: 900rpx;
  background:rgba(255,255,255,0.9);
}

.authTip_dialog{
  position: relative;
  top: 50%;
  left: 50%;
  transform:translate(-50%,-50%);
  border-radius: 20rpx;
  box-shadow: 0 2rpx 6rpx rgb(0 0 0 / 30%);
  box-sizing: border-box;
  width: 80%;
  height: 15%;
  background:rgba(255,255,255,0.8);
}

.authTip_content{
  font-size: 35rpx;
  font-weight: bolder;
  text-align: center;
  position: relative;
  top:30rpx;
}

.email_input{
  padding: 8rpx;
  border-bottom: 2rpx solid rgba(95, 92, 92, 0.2);
  display: flex;
  justify-content: start;
}

.email_input iconfont{
  position: relative;
  top:3rpx
}

.dialog_title iconfont{
  position: relative;
  top:3rpx
}

.input_content{
  position: relative;
  left:8rpx;
}

.content_textarea{
  padding:15rpx;
  border-bottom: 2rpx solid rgba(95, 92, 92, 0.2);
  max-height: 150rpx;
  overflow: scroll;
  min-height: 150rpx;
}

.input_textarea{
  width:100%;
}

.dialog_footer{
  width: 100%;
  margin: auto;
  display:flex;
  justify-content: space-between;
  position: absolute;
  bottom: 30rpx;
}

.dialog_footer button{
  border-radius: 0;
}

.auth_footer{
  width: 100%;
  height: 35%;
  margin: auto;
  display:flex;
  justify-content: space-between;
  position: absolute;
  bottom: 0rpx;
}

.left_view{
  width: 50%;
  height: 100%;
}

.left_view button{
  background-color: rgba(255,255,255,0.8);
  border-radius: 0;
  border-bottom-left-radius: 20rpx;
  width: 100%;
  height: 100%;
}

.right_view{
  width: 50%;
  height: 100%;
}

.right_view button{
  background-color: rgba(7,193,96,0.8);
  border-radius: 0;
  border-bottom-right-radius: 20rpx;
  width: 100%;
  height: 100%;
}

.dialog_footer button{
  width:100%;
  height: 100%;
}

.history_message {
  border-top: 2rpx solid rgba(95, 92, 92, 0.2);
  border-bottom: 2rpx solid rgba(95, 92, 92, 0.2);
  min-height: 450rpx;
  max-height: 450rpx;
  overflow-y: auto;
}

.nothing_tip {
  text-align: center;
  color: #a1a6af;
  font-size: 25rpx;
  padding: 40rpx 0;
}

.sent_message {
  padding-bottom: 30rpx;
  text-align: right;
  margin-right: 30rpx;
}

.sent_message:nth-child(1) {
  padding-top: 30rpx;
}

.sent_address {
  font-size: 20rpx;
  color: #878b92;
  padding-right:105rpx;
}

.icon-chenggong {
  color: #6BC839;
  font-size: 28rpx;
  position: relative;
  top: 18rpx;
  right: 6rpx;
}

.content_time {
  background-color: #D0E9FF;
  border-radius: 8rpx;
  text-align: center;
  display: inline-block;
  padding: 10rpx 20rpx 6rpx 20rpx;
  max-width: 500rpx;
  margin-right: 25rpx;
  position: relative;
}

.content_time::after{
  content: '';
  position: absolute;
  top: 50rpx;
  right: -10rpx;
  width: 20rpx;
  height: 20rpx;
  margin-top: -20rpx;
  background: inherit;
  border-radius:3rpx;
  /*自动继承父元素的背景*/
  transform: rotate(45deg);
}

.sent_content {
  color: #252525;
  text-align: justify;
  display: inline-block;
  margin: auto;
  word-break:break-all;
}

.sent_time {
  font-size: 20rpx;
  color: #a1a6af;
  text-align: right;
  margin-top: 6rpx;
}

.tip_content::before {
  content: "";
  width: 140rpx;
  height: 2rpx;
  background-color: #a1a6af;
  display: inline-block;
  position: relative;
  top: -10rpx;
  left: -16rpx;
}

.tip_content::after {
  content: "";
  width: 140rpx;
  height: 2rpx;
  background-color: #a1a6af;
  display: inline-block;
  position: relative;
  top: -10rpx;
  left: 16rpx;
}

.avatar_img{
  border-radius: 8rpx;
  overflow: hidden;
}

.avatar_pic{
  width: 80rpx;
  height: 80rpx;
}

.content_avatar{
  display: flex;
  justify-content: flex-end;
}

/* 暗黑模式下应用的样式 */
@media (prefers-color-scheme: dark) {
  .feedBack_dialog{
    background: rgba(0,0,0,0.9);
  }

  .authTip_dialog{
    background: rgba(0,0,0,0.9);
  }

  .feed_back,.search_sum{
    border:2rpx solid grey;
  }
}